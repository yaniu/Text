<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/log_shop"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search"
            android:id="@+id/fm_classify_find_img"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入商品名称"
            android:textColorHint="#FFF5A398"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:id="@+id/fm_classify_et_find"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <ImageView

                    android:scaleType="fitXY"
                    android:id="@+id/f2_mo1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:src="@mipmap/classify_facial_mask" />

                <LinearLayout
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/f2_mo2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/classify_emollient_water" />

                        <ImageView
                            android:id="@+id/f2_mo3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/classify_body_lotion" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/f2_mo4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/classify_facial_cleanser" />

                        <ImageView
                            android:id="@+id/f2_mo5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/classify_other" />
                    </LinearLayout>
                    <ImageView
                             android:id="@+id/f2_mo6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:src="@mipmap/classify_kit" />



                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="—— 按功效 ——"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="美丽从选对开始"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/f2_gong1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:src="@mipmap/classify_hydrating" />

                    <ImageView
                        android:id="@+id/f2_gong2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:src="@mipmap/classify_soothing" />

                    <ImageView
                        android:id="@+id/f2_gong3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:src="@mipmap/classify_control_oil" />

                    <ImageView
                        android:id="@+id/f2_gong4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:src="@mipmap/classify_whitening" />

                    <ImageView
                        android:id="@+id/f2_gong5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:src="@mipmap/classify_firming" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="——  按肤质  ——"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="适合自己才是最好"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/f2_fu1"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="#FF7CF458"
                            android:textColor="#ffffff"
                            android:text="#混合性肤质#"
                            android:textSize="22sp" />

                        <Button
                            android:textColor="#ffffff"
                            android:id="@+id/f2_fu2"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="#FFE2C0AA"
                            android:text="#中性肤质#"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:textColor="#ffffff"
                            android:id="@+id/f2_fu3"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="#FF7C89E9"
                            android:text="#干性肤质#"
                            android:textSize="22sp" />


                        <Button
                            android:textColor="#ffffff"
                            android:id="@+id/f2_fu4"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="#FF74E26F"
                            android:text="#油性肤质#"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:textColor="#ffffff"
                            android:id="@+id/f2_fu5"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="#FFF5A398"
                            android:text="#痘痘肤质#"
                            android:textSize="22sp" />

                        <Button
                            android:textColor="#ffffff"
                            android:id="@+id/f2_fu6"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="#FF73DDED"
                            android:text="#敏感肤质#"
                            android:textSize="22sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="——  明星产品  ——"
                    android:textSize="18sp" />

                <com.example.administrator.yn_yunifang.view.InnerGridView
                    android:layout_marginTop="10dp"
                    android:id="@+id/f2_rec"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:background="#d4d4cd"
                    android:numColumns="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.example.administrator.yn_yunifang.view.InnerGridView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>