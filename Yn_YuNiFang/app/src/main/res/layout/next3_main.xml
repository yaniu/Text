<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fff">
    <LinearLayout
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="购物车"
            android:textSize="20dp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#282727"></View>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/f3_lin2"

        android:layout_below="@id/dd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >

          <ImageView
              android:src="@drawable/shopping_trolley_empty"
              android:layout_gravity="center"
              android:layout_marginTop="100dp"

              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="购物车是空的喲~~~，快去逛逛哈"
                android:textSize="18dp"
                />
            <Button
                android:background="@drawable/log_shop"
                android:id="@+id/f3_guang"
                android:layout_width="wrap_content"
                android:text="逛一逛"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/dd"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/f3_xiang"

      >
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.example.administrator.yn_yunifang.view.QQListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/f3_listview"></com.example.administrator.yn_yunifang.view.QQListView>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:background="@drawable/yuan_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/f3_box"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全选"
                    android:textSize="18dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="80dp"
                        android:textColor="#ff00"
                       android:id="@+id/f3_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18dp"
                        />

                    <TextView

                        android:id="@+id/f3_price"
                        android:textColor="#ff00"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18dp"
                        />

                </LinearLayout>



                <TextView
                    android:id="@+id/f3_jiesuan"
                  android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="#ff0099"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="结算"
                    android:textSize="18dp"
                    />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>